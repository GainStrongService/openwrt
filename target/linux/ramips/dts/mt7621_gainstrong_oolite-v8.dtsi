&state_default {
	gpio {
		groups = "jtag", "wdt";
		function = "gpio";
	};

	i2s_pins: i2s {
		groups = "uart3";
		function = "i2s";
	};
};


&i2s {
	#sound-dai-cells = <0>;
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&i2s_pins>;
};

&sdhci {
	status = "okay";
};

&spi0 {
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <40000000>;
		m25p,fast-read;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x0 0x30000>;
				read-only;
			};

			partition@30000 {
				label = "u-boot-env";
				reg = <0x30000 0x10000>;
			};

			factory: partition@40000 {
				label = "factory";
				reg = <0x40000 0x10000>;
				read-only;
			};

			firmware: partition@50000 {
				compatible = "denx,uimage";
				label = "firmware";
				reg = <0x50000 0x1000000>;
			};

			// Whole flash size, available for full flash backup
			all: partition@all {
				label = "all";
				read-only;
			};

		};
	};
};

&pcie {
	status = "okay";
	reset-gpios =
		// MT7603 and MT7613 on Oolite V8.1 share GPIO 19 reset, and can only be reset once, so the second reset GPIO must be left empty
		<&gpio 19 GPIO_ACTIVE_LOW>,
	    <>,
	    <>;
};

&pcie0 {
	// MT7603 on Oolite V8.1 PCIe 0
	wifi@0,0 {
		compatible = "mediatek,mt76";
		reg = <0x0 0 0 0 0>;
		mediatek,mtd-eeprom = <&factory 0x0>;
	};
};

&pcie1 {
	// MT7613 on Oolite V8.1 PCIe 1
	wifi@0,0 {
		compatible = "mediatek,mt76";
		reg = <0x0 0 0 0 0>;
		mediatek,mtd-eeprom = <&factory 0x8000>;
	};
};

&factory {
	compatible = "nvmem-cells";
	#address-cells = <1>;
	#size-cells = <1>;

	macaddr_factory_28: macaddr@28 {
		reg = <0x28 0x6>;
	};

	macaddr_factory_2e: macaddr@2e {
		reg = <0x2e 0x6>;
	};
};

&gmac0 {
	nvmem-cells = <&macaddr_factory_28>;
	nvmem-cell-names = "mac-address";
};

&switch0 {
	ports {
		port@0 {
			status = "okay";
			label = "lan1";
		};

		port@1 {
			status = "okay";
			label = "lan2";
		};

		port@2 {
			status = "okay";
			label = "lan3";
		};

		port@3 {
			status = "okay";
			label = "lan4";
		};

		port@4 {
			status = "okay";
			label = "wan";
			nvmem-cells = <&macaddr_factory_2e>;
			nvmem-cell-names = "mac-address";
		};
	};
};

