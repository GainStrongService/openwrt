#include "mt7621.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	compatible = "gainstrong,oolite-v8", "mediatek,mt7621-soc";

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			gpios = <&gpio 18 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};

	leds {
		compatible = "gpio-leds";

		system {
			label = "green:system";
			gpios = <&gpio 0 GPIO_ACTIVE_HIGH>;
		};
	};

	codec: max98357a {
		compatible = "maxim,max98357a";
		#sound-dai-cells = <0>;
	};

	sound {
		compatible = "simple-audio-card";
		pinctrl-names = "default";
		// pinctrl-0 = <&sdmode_en>;
		simple-audio-card,name = "Board Audio";
		simple-audio-card,format = "i2s";
		simple-audio-card,widgets = "Speaker", "Speakers";
		simple-audio-card,routing = "Speakers", "Speaker";
		simple-audio-card,bitclock-master = <&cpu_dai>;
		simple-audio-card,frame-master = <&cpu_dai>;
		cpu_dai: simple-audio-card,cpu {
			sound-dai = <&i2s>;
			system-clock-frequency = <&sound_osc 0>;
			dai-tdm-slot-num = <2>;
			dai-tdm-slot-width = <16>;
		};
		codec_dai: simple-audio-card,codec {
			sound-dai = <&codec>;
		};
	};
};

&sdhci {
	status = "okay";
};

&spi0 {
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <40000000>;
		m25p,fast-read;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x0 0x30000>;
				read-only;
			};

			partition@30000 {
				label = "u-boot-env";
				reg = <0x30000 0x10000>;
			};

			factory: partition@40000 {
				label = "factory";
				reg = <0x40000 0x10000>;
				read-only;
			};

			firmware: partition@50000 {
				compatible = "denx,uimage";
				label = "firmware";
				reg = <0x50000 0x1000000>;
			};

			// Whole flash size, available for full flash backup
			all: partition@all {
				label = "all";
				read-only;
			};

		};
	};
};

&pcie {
	status = "disabled";
	reset-gpios =
		// MT7603 and MT7613 on Oolite V8.1 share GPIO 19 reset, and can only be reset once, so the second reset GPIO must be left empty
		<&gpio 19 GPIO_ACTIVE_LOW>,
	    <>,
		// GPIO 7 is used to reset the SATA controller on the development board
	    <&gpio 7 GPIO_ACTIVE_LOW>;
};

&pcie0 {
	// MT7603 on Oolite V8.1 PCIe 0
	wifi@0,0 {
		compatible = "mediatek,mt76";
		reg = <0x0 0 0 0 0>;
		mediatek,mtd-eeprom = <&factory 0x0>;
	};
};

&pcie1 {
	// MT7613 on Oolite V8.1 PCIe 1
	wifi@0,0 {
		compatible = "mediatek,mt76";
		reg = <0x0 0 0 0 0>;
		mediatek,mtd-eeprom = <&factory 0x8000>;
	};
};

&factory {
	compatible = "nvmem-cells";
	#address-cells = <1>;
	#size-cells = <1>;

	macaddr_factory_28: macaddr@28 {
		reg = <0x28 0x6>;
	};

	macaddr_factory_2e: macaddr@2e {
		reg = <0x2e 0x6>;
	};
};

&gmac0 {
	nvmem-cells = <&macaddr_factory_28>;
	nvmem-cell-names = "mac-address";
};

&switch0 {
	ports {
		port@0 {
			status = "okay";
			label = "lan1";
		};

		port@1 {
			status = "okay";
			label = "lan2";
		};

		port@2 {
			status = "okay";
			label = "lan3";
		};

		port@3 {
			status = "okay";
			label = "lan4";
		};

		port@4 {
			status = "okay";
			label = "wan";
			nvmem-cells = <&macaddr_factory_2e>;
			nvmem-cell-names = "mac-address";
		};
	};
};

&state_default {
	gpio {
		groups = "jtag", "uart3", "wdt";
		function = "gpio";
	};
};


&pinctrl {
	i2s_pins: i2s {
		i2s {
			groups = "uart3";
			function = "i2s";
		};
	};
};

&i2s {
	#sound-dai-cells = <0>;
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&i2s_pins>;
};
