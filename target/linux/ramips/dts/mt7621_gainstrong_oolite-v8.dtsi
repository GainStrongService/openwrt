#include "mt7621.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	compatible = "gainstrong,oolite-v8", "mediatek,mt7621-soc";

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			gpios = <&gpio 18 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};

	leds {
		compatible = "gpio-leds";

		system {
			label = "green:system";
			gpios = <&gpio 0 GPIO_ACTIVE_HIGH>;
		};
	};
};

&sdhci {
	status = "okay";
};

&spi0 {
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <50000000>;
		m25p,fast-read;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x0 0x30000>;
				read-only;
			};

			partition@30000 {
				label = "u-boot-env";
				reg = <0x30000 0x10000>;
				read-only;
			};

			factory: partition@40000 {
				label = "factory";
				reg = <0x40000 0x10000>;
				read-only;
			};

			firmware: partition@50000 {
				compatible = "denx,uimage";
				label = "firmware";
			};

			// Whole flash size, available for full flash backup
			all: partition@all {
				label = "all";
				read-only;
			};

		};
	};
};

&pcie {
	status = "okay";
	reset-gpios =
		// MT7603 and MT7613 on Oolite V8.1 share GPIO 19 reset, and can only be reset once, so the second reset GPIO must be left empty
		<&gpio 19 GPIO_ACTIVE_LOW>,
	    <>,
		// GPIO 7 is used to reset the SATA controller on the development board
	    <&gpio 7 GPIO_ACTIVE_LOW>;
};

&pcie0 {
	// MT7603 on Oolite V8.1 PCIe 0
	wifi@0,0 {
		compatible = "mediatek,mt76";
		reg = <0x0 0 0 0 0>;
		mediatek,mtd-eeprom = <&factory 0x0>;
	};
};

&pcie1 {
	// MT7613 on Oolite V8.1 PCIe 1
	wifi@0,0 {
		compatible = "mediatek,mt76";
		reg = <0x0 0 0 0 0>;
		mediatek,mtd-eeprom = <&factory 0x8000>;
	};
};

&gmac0 {
	mtd-mac-address = <&factory 0x28>;
};

&switch0 {
	ports {
		port@0 {
			status = "okay";
			label = "lan1";
		};

		port@1 {
			status = "okay";
			label = "lan2";
		};

		port@2 {
			status = "okay";
			label = "lan3";
		};

		port@3 {
			status = "okay";
			label = "lan4";
		};

		port@4 {
			status = "okay";
			label = "wan";
			mtd-mac-address = <&factory 0x2e>;
		};
	};
};

&state_default {
	gpio {
		groups = "jtag", "rgmii2", "uart3", "wdt";
		function = "gpio";
	};
};
