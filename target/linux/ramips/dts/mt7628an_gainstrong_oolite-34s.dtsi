#include "mt7628an.dtsi"
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	aliases {
		// keep the same device path with Raspberry Pi
		spi0 = &spi1;

		led-boot = &led_system;
		led-failsafe = &led_system;
		led-upgrade = &led_system;
	};

	leds {
		compatible = "gpio-leds";

		led_system: led_gpio_44 {
			label = "led_gpio_44";
			gpios = <&gpio 44 GPIO_ACTIVE_HIGH>;
		};
	};

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			gpios = <&gpio 38 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};

	spi1: spi-gpio0 {
		compatible = "spi-gpio";
		#address-cells = <1>;
		cs-gpios = <&gpio 41 0>;
		gpio-sck = <&gpio 3 0>;
		gpio-miso = <&gpio 0 0>;
		gpio-mosi = <&gpio 2 0>;
		num-chipselects = <1>;
		spidev@0 {
			#address-cells = <1>;
			compatible = "linux,spidev";
			spi-max-frequency = <10000000>;
			reg = <0>;
		};
	};

	gpio-export {
		compatible = "gpio-export";
		#size-cells = <0>;

		bluetooth-wakeup {
			gpio-export,name = "bluetooth-wakeup";
			gpio-export,output = <1>;
			gpios = <&gpio 40 GPIO_ACTIVE_LOW>;
		};
	};
};

&state_default {
	gpio {
		groups = "gpio", "i2s", "perst", "spi cs1", "p0led_an", "p1led_an", "p2led_an", "p3led_an", "p4led_an", "wled_an";
		function = "gpio";
	};
};

&spi0 {
	status = "okay";
	pinctrl-names = "default";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <40000000>;
		m25p,fast-read;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x0 0x30000>;
				read-only;
			};

			partition@30000 {
				label = "u-boot-env";
				reg = <0x30000 0x10000>;
				read-only;
			};

			factory: partition@40000 {
				label = "factory";
				reg = <0x40000 0x10000>;
				read-only;
			};

			firmware: partition@50000 {
				compatible = "denx,uimage";
				label = "firmware";
			};
		};
	};
};

&ethernet {
	mtd-mac-address = <&factory 0x4>;
	mtd-mac-address-increment = <1>;
};

&wmac {
	status = "okay";
};

&i2c {
	status = "okay";	
};

&uart1 {
	status = "okay";	
};
